    {% block contenido %}

        <div class="container" style="margin-bottom: 20px;">

            <div class="clearfix" style="height: 100%;width: 95%">
                <div class="span2">

                    <h1>Documentos</h1>

                    <table class="table table-striped">
                        <tr>
                            <th> </th>
                            <th>Tema Relacionado</th>
                            <th>Nombre Documento</th>
                            <th>Documento</th>
                            <th>Acci&oacute;n</th>
                        </tr>

                        {% for documento in documentos %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ documento.temaRelacionado }}</td>
                                <td>{{ documento }}</td>
                                <td><a href="{{ asset('uploads/pdfs/' ~ documento.rutaPDF) }}">{{ documento.rutaPDF }}</a></td>
                                <td>
                                    <a href="{{ path('backend_documento_editar', { 'id': documento.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('backend_documento_borrar', { 'id': documento.id }) }}" class="btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>

                    <a href="{{ path('backend_documento_crear') }}" class="btn btn-default">AÃ±adir Documento</a>
                </div>
            </div>
        </div>

    {% endblock %}
