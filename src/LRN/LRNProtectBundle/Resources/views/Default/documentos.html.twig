                        </a>
                        <a href="{{ asset('uploads/pdfs/' ~ doc.rutaPDF) }}" download>
                            <h6 style="text-transform: uppercase;"><li class="icon-download-alt"></li>{{ doc.nombre }}</h6>
                        </a>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

