        <script type="text/javascript" language="JavaScript">
            function HidePart(d) { document.getElementById(d).style.opacity = 0; }
            function ShowPart(d) { document.getElementById(d).style.opacity = 1; }

            function ButtonClicked(d)
            {
//                var elem = this.parentNode;
//
//                if(elem.style.display == 'none') { HidePart(d); elem.style.display = 'block'; }
//                else  { ShowPart(d); elem.style.display = 'none'; }
//                Sfjs.setPreference('toolbar/displayState', 'block');

                if(document.getElementById(d).style.opacity == 0) { ShowPart(d); }
                else  { HidePart(d); }
            }

            function CambiarImg(d, flag)
            {
                //var myArray = document.getElementById(d).innerHTML.split('.');
                var myArray = document.getElementById(d).getAttribute("src").split('.');
                var first = myArray[0].split('-');

                var name = first[0]+'.'+myArray[1];

                //if((flag != 'true') && first[1] != null)
                if(flag != 'true')
                {
                    name = myArray[0]+'-bw.'+myArray[1];
                }
                //alert(name);
                document.getElementById(d).setAttribute("src",name);
            }

            function CambiarImgDiv(d, flag, carpeta)
            {
                //var myArray = document.getElementById(d).innerHTML.split('.');
                var myArrayStyle = document.getElementById(d).getAttribute('style').split(';');
                //alert(myArrayStyle);
                /*
                * myArrayStyle[0] = background: url('/uploads/images/1_1-bw.jpg') repeat center center
                * myArrayStyle[1] = width: 25%
                * myArrayStyle[2] = height: 300px
                * myArrayStyle[3] = display: table
                * myArrayStyle[4] = text-align: center
                * */

                var address = myArrayStyle[0].split("'");
                //alert(address);
                /*
                * address[0] = background: url(
                * address[1] = /uploads/images/1_1-bw.jpg
                * address[2] = ) repeat center center
                * */

                //var file = address[1].split('/');
                //alert(file);

                var myArray = document.getElementById(d).getAttribute('title');
                //alert(myArray);

                var first = myArray.split('-');
                var extension = (first[1].split('.'))[1];
                //alert(extension);

                var name = first[0]+'.'+extension;

                //if((flag != 'true') && first[1] != null)
                if(flag != 'true')
                {
                    name = first[0]+'-bw.'+extension;
                }
                //alert(name);
                // name = 1_1-bw.jpg

                if(carpeta == null)
                    carpeta = 'images';

                var style = address[0] + "'/uploads/"+carpeta+"/" + name + "'" + address[2] + ";" +
                        myArrayStyle[1] + ";" + myArrayStyle[2] + ";" + myArrayStyle[3] + ";" + myArrayStyle[4] + ";";

                //alert(style);

                document.getElementById(d).setAttribute("style",style);
            }

            //Add Hover effect to menus
            jQuery('ul.nav li.dropdown').hover(function() {
                jQuery(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn();
            }, function() {
                jQuery(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut();
            });

            $('.carousel').carousel({
                interval: false
            })

