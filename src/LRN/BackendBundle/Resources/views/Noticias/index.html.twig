    {% block contenido%}

        <div class="container" style="margin-bottom: 20px;">

            {#<div class="row">#}
                <div class="span12">
                    <h1>Noticias</h1>

                    <table class="table table-striped">
                        <tr>
                            {#<th>Id</th>#}
                            <th>T&iacute;tulo</th>
                            <th>Autor</th>
                            <th>Fecha de Publicaci&oacute;n</th>
                            <th>Acci&oacute;n</th>
                        </tr>
                        {% for entity in entities %}
                            <tr>
                                {#<td><a href="{{ path('sala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                                {#<td><a href="{{ path('sala_show',{'id':entity.id}) }}">{{ entity.nombre }}</a> </td>#}
                                <td><a href="{{ path('backend_noticias_show', { 'id': entity.id }) }}">{{ entity.titular }}</a></td>
                                <td>{{ entity.nombreAutor }}</td>
                                <td>{% if entity.fechaArticulo %}{{ entity.fechaArticulo|date('Y-m-d') }}{% endif %}</td>
                                <td>
                                    <a href="{{ path('backend_noticias_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('backend_noticias_delete', { 'id': entity.id }) }}" class="btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>

                    <a href="{{ path('backend_noticias_new') }}" class="btn btn-default ">Publicar Noticia</a>

                </div>

            {#</div>#}
        </div>


    {% endblock %}


