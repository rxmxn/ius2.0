{# src/HPT/UsuarioBundle/Resources/views/Default/registro.html.twig #}
{% extends "BackendBundle::backend.html.twig" %}

{% block menu %}
    <li class="active">
        <a href="{{ path('backend_conceptos_listar') }}">Conceptos</a>
    </li>
    <li class="">
        <a href="{{ path('backend_estadisticas_listar') }}">Estadisticas</a>
    </li>
    <li class="">
        <a href="{{ path('backend_tutorial_listar') }}">Tutoriales</a>
    </li>
    <li class="">
        <a href="{{ path('backend_documento_listar') }}">Documentos</a>
    </li>
    <li>
        <a href="{{ path('backend_homepage') }}">Noticias</a>
    </li>
    <li class="">
        <a href="{{ path('backend_videos_listar') }}">Videos</a>
    </li>
{% endblock %}

    {% block contenido %}

        <form action={% block action %}"{{ path('backend_conceptos_crear') }}" {% endblock %}
              method="post" {{ form_enctype(formulario) }} style="margin-bottom: 20px; margin-top: 20px; margin-left: 20px;">

            {#
                {{ form_widget(formulario) }}
                Mostrando el formulario que paso el controlador.
                form_widget muestra todos los campos del formulario ,
                junto con los posibles mensajes de error y el título de cada campo.

                La funcion form_enctype() de Twig determina si es necesario añadir el atributo
                enctype="multipart/form-data" porque el formulario incluye campos para subir archivos.
            #}

            <div class="alert-danger"><h2>{{ form_errors(formulario) }}</h2></div>

            <!----- contact-form ------>
            <div class="contact-form">

                <div class="contact-form-row" style="margin-left: 30px;">
                    <div>
                        <span>Subt&iacute;tulo :</span>
                        {{ form_widget(formulario.subtitulo, { 'attr': {
                            'accesskey' : 'n',
                            'tabindex' : 1,
                            'class' : "text",
                            'placeholder' : "Subtítulo"
                        } }) }}
                    </div>

                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>

                <div class="span12" id="content" style="margin-left: 30px;">
                    <div class="row-fluid">
                        <!-- block -->
                        <div class="block">
                            <div class="block-content collapse in">
                                {{ form_widget(formulario.texto, { 'attr': {
                                    'style' : "width:98%; height:200px;",
                                    'placeholder' : "Explicación del concepto"
                                } }) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"> </div>

                <div class="contact-form-row2">
                    <div class="text-center">
                        <span>Imagen :</span>
                        {% block imagen %}{% endblock %}
                    </div>
                    <div class="text-center">
                        <span>Si desea seleccionar una nueva imagen :</span>
                        {{ form_widget(formulario.imagen) }}
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>

                <div class="text-center">
                    <input type="submit" value={% block value_boton %}"Agregar Concepto"{% endblock %}>
                </div>
                <div class="clearfix"> </div>
            </div>

            {{ form_rest(formulario) }}

        </form>

    {% endblock %}