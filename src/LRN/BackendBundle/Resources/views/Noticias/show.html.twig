{% extends "BackendBundle::backend.html.twig" %}

{% block menu %}
    <li class="">
        <a href="{{ path('backend_conceptos_listar') }}">Conceptos</a>
    </li>
    <li class="">
        <a href="{{ path('backend_estadisticas_listar') }}">Estadisticas</a>
    </li>
    <li class="">
        <a href="{{ path('backend_tutorial_listar') }}">Tutoriales</a>
    </li>
    <li class="">
        <a href="{{ path('backend_documento_listar') }}">Documentos</a>
    </li>
    <li class="active">
        <a href="{{ path('backend_homepage') }}">Noticias</a>
    </li>
    <li class="">
        <a href="{{ path('backend_videos_listar') }}">Videos</a>
    </li>
{% endblock %}

{% block contenido%}

    <div style="display: table; width: 80%; text-align: center; margin-left: auto; margin-right: auto;
        margin-bottom: 40px;">
        <div class="blog-artical-info-img" style="width: 60%; height: 60%; margin-left: auto; margin-right: auto;">

            <img id="{{ entity.id }}" alt="..." class="img-responsive grayscale grayscale-fade"
                 src="{{ asset('uploads/images/' ~ entity.rutaFoto) }}"
                 title="post-name">

        </div>
        <div class="blog-artical-info-head">
            <h2>{{ entity.titular }}</h2>
            <ul>
                <li style="font-size: 20px;">
                    <span> </span>
                    por {{ entity.nombreAutor }} ({{ entity.fechaArticulo|date('d-m-Y') }}),
                    <a href="{{ path('noticias_categoria', { 'categoria': entity.categoria }) }}">
                        {{ entity.categoria }}
                    </a>

                </li>
                <div class="clearfix"> </div>
            </ul>
        </div>
        <div class="blog-artical-info-text" style="text-align:justify ">
            {{ entity.texto | raw }}
        </div>
    </div>
{% endblock %}
